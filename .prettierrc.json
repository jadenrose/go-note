{
  "plugins": ["prettier-plugin-go-template"],
  "overrides": [
    {
      "files": ["*.html"],
      "options": {
        "parser": "go-template",
        "tabWidth": 4,
        "goTemplateBracketSpacing": false,
        "printWidth": 65
      }
    },
    {
      "files": ["*.css"],
      "options": {
        "tabWidth": 4
      }
    },
    {
      "files": ["*.js", "*.ts"],
      "options": {
        "useTabs": true,
        "printWidth": 80,
        "singleQuote": true
      }
    }
  ]
}
